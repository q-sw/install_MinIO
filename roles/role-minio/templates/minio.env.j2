# Volume to be used for MinIO server.
MINIO_VOLUMES="{{role_minio_data_folder_path}}"
# Use if you want to run MinIO on a custom port.
MINIO_OPTS="-C /etc/minio --address :{{role_minio_api_port}} --console-address :{{role_minio_console_port}}"
# Root user for the server.
MINIO_ROOT_USER={{role_minio_admin_user}}
# Root secret for the server.
MINIO_ROOT_PASSWORD={{role_minio_password_admin_user}}
MINIO_REGION_NAME="default"
MINIO_BROWSER_REDIRECT_URL="{{role_minio_minio_url}}"
